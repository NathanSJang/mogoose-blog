<%- include('../partials/header') %>

<div>
    <header>
      <p class="recipe-title"> <%= recipe.title %></p>
    </header>
    <div class="row">
      <div class="col s12 ">
          <div class="card-image">
            <img class="recipe-image" src="<%= recipe.recipeImageUrl %>" alt="recipe-image">
          </div>
      </div>
      <div class="recipe-content">
        <h3>Note</h3>
        <p> <%= recipe.note %> </p>
        <h3>Ingredients</h3>
        <p> <%= recipe.ingredients %> </p>
        <h3>Directions</h3>
        <p> <%= recipe.directions %> </p>
      </div>
    </div>
        <hr>
        <footer>
          <div class="footer-icon">
            <span>
              <i class="tiny material-icons">date_range</i>
              <time><%= recipe.createdAt.toLocaleDateString() %></time>
            </span>
          </div>
          <div>
            <span>
              <i class="tiny material-icons"><%= cuisine.icornName %></i>
              <%= cuisine.name %>
            </span>
          </div>
        </footer>
  </div>

<form id="add-review-form" method="POST" action="/recipes/<%= recipe._id %>/likes">
  <label>Review:</label>
  <textarea name="comment"></textarea>
  <label>Rating:</label>
  <select name="like">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
  <input type="submit" value="Add Review">
</form>

<% if (recipe.likes.length) { %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% recipe.likes.forEach(function(r) { %>
        <% total += r.rating %>
        <tr>
          <td class="review-user"><%= r.userName %></td>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.comment %></td>
          <td><%= r.rating %></td>
          <td>
            <% if (user && user._id.equals(r.user)) {%>
              <form action="/likes/<%= r._id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
              </form>
              <% } %>
          </td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="2"></td>
        <td><strong><%= (total / recipe.likes.length).toFixed(1) %></strong></td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>


<%- include('../partials/footer') %>