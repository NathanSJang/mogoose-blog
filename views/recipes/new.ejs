<%- include('../partials/header') %>
<div class="row">
  <form class="col s12" action="/recipes" method="POST">
    <div class="row">
      <div class="input-field col s6">
        <input name="title" id="title" type="text" class="validate">
        <label for="title">Title</label>
      </div>
    </div>
    <p>
      <label>
        <input name="Japanese" type="radio" />
        <span>Japanese</span>
      </label>
      <label>
        <input name="Korean" type="radio" />
        <span>Korean</span>
      </label>
      <label>
        <input name="French" type="radio" />
        <span>French</span>
      </label>
      <label>
        <input name="American" type="radio" />
        <span>American</span>
      </label>
      <label>
        <input name="Baking" type="radio" />
        <span>Baking</span>
      </label>
    </p>
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
      <i class="material-icons right">send</i>
    </button>
  </form>
</div>
<%- include('../partials/footer') %>