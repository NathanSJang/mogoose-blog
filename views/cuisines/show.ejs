<%- include('../partials/header') %>
<span>
  <h1><%= title %>
    <% if(user.admin) { %>
      <a class="add white-text" href="/cuisines/<%= cuisine._id %>/recipes/new">
        <button class="btn waves-effect black add-btn white-text"> 
          Add recipe<i class="material-icons right white-text">local_dining</i>
      </button>
    </a>
      <% } %>
  </h1>
</span>

<div>
  <% if (recipe.length) { %>
<% recipe.forEach(function(r) { %>
  <header>
    <p class="recipe-title"> <%= r.title %></p>
  </header>
  <div class="row">
    <div class="col s12 ">
      <a href="/recipes/<%= r.id %>">
        <div class="card-image">
          <img class="recipe-image" src="<%= r.recipeImageUrl %>" alt="recipe-image">
        </div>
      </a>
    </div>
    <div class="recipe-content">
      <p> <%= r.note %> </p>
    </div>
  </div>
      <hr>
      <footer class="recipe-footer">
        <div class="footer-icon">
          <% if(user.admin) { %>
            <form action="/recipes/<%= r._id %>?_method=DELETE" class="delte-form" method="POST">
              <button type="submit" class="waves-effect black btn-small delete-btn">
                <i class="small material-icons white-text">delete_outline</i>
              </button>
            </form>
          <% } %>
          <span>
            <i class="tiny material-icons">date_range</i>
            <time><%= r.createdAt.toLocaleDateString() %></time>
          </span>
        </div>
        <div>
          <span>
            <i class="tiny material-icons"><%= cuisine.icornName %></i>
            <%= cuisine.name %>
          </span>
        </div>
        <button class="waves-effect black btn-small delete-btn back-btn">
          <a class="white-text" href="/cuisines"><i class="tiny material-icons white-text">arrow_back</i></a>
      </button>
      </footer>
  <% }); %>
  <% } else { %>
    <div class="row">
      <div clas="col s12">
        <div class="card-image">
          <img class="recipe-image" src="https://images.unsplash.com/photo-1515003197210-e0cd71810b5f?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" alt="recipe-image">
        </div>
        <h6 class="like-comment">Sorry No Recipe Yet</h6>
      </div>
    </div>
        <button class="waves-effect black btn-small delete-btn back-btn">
            <a class="white-text" href="/cuisines"><i class="tiny material-icons white-text">arrow_back</i></a>
        </button>
    <% } %>
</div>


<%- include('../partials/footer') %>