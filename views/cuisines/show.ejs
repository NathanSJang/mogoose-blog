<%- include('../partials/header') %>
<span>
  <h1><%= title %>
    <button type="submit" class="waves-light btn-small add-btn"> 
      <% if(user.admin) { %>
      <a class="add" href="/cuisines/<%= cuisine._id %>/recipes/new">Add recipe</a>
      <% } %>
    </button>
  </h1>
</span>

<div>
<% recipe.forEach(function(r) { %>
  <header>
    <p class="recipe-title"> <%= r.title %></p>
  </header>
  <div class="row">
    <div class="col s12 ">
      <a href="/recipes/<%= r.id %>">
        <div class="card-image">
          <img class="recipe-image" src="https://images.unsplash.com/photo-1606851452836-d5213cc6d6d8?ixid=MXwxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" alt="">
        </div>
      </a>
    </div>
    <div class="recipe-content">
      <p>A few years ago, when travelling for fun was still a thing, I went to Amsterdam and ate one of the best apple cakes (also known as </p>
    </div>
  </div>
      <hr>
      <footer>
        <div class="footer-icon">
          <% if(user.admin) { %>
            <form action="/recipes/<%= r._id %>?_method=DELETE" class="delte-form" method="POST">
              <button type="submit" class="waves-effect waves-light btn-small delete-btn">Delete</button>
            </form>
          <% } %>
          <span>
            <i class="tiny material-icons">date_range</i>
            <time><%= r.createdAt.toLocaleDateString() %></time>
          </span>
        </div>
        <div>
          <span>
            <i class="tiny material-icons"><%= cuisine.icornName %></i>
            <%= cuisine.name %>
          </span>
        </div>
      </footer>
  <% }); %>
</div>


<%- include('../partials/footer') %>