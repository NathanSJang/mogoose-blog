<%- include('../partials/header') %>

<span>
  <h1><%= title %>
    <button type="submit" class="waves-light btn-small add-btn"> 
      <% if(user.admin) { %>
      <a class="add" href="/cuisines/new">Add Cuisines</a>
      <% } %>
    </button>
  </h1>
</span>

<div class="section">
  <div class="col s12">
    <span class="title"><%= title %></span>
  </div>
  <div class="row">
  <% if (cuisines.length) { %>
    <% cuisines.forEach(function(c) { %>
  <div class="col s4">
    <div class="card">
      <a href="/cuisines/<%= c._id %>">
        <div class="card-image">
          <img src="<%= c.imageUrl %>">
        </div>
      </a>
      <div class="card-action">
        <div class="row content-box">
          <p class="cuisine-title"><%= c.name %></p>
          <% if(user.admin) { %>
              <form action="/cuisines/<%= c._id %>?_method=DELETE" class="delte-form" method="POST">
                <button type="submit" class="waves-effect waves-light btn-small delete-btn">Delete</button>
              </form>
          </div>
        <% } %>
      </div>
    </div>
  </div>
    <% }); %>
  </div>
</div>
  <% } else { %>
  <h3>Please Add cuisines</h3>
  <% } %>

<%- include('../partials/footer') %>